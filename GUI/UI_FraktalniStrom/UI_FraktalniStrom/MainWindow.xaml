<Window x:Class="UI_FraktalniStrom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_FraktalniStrom"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" Background="Lavender">
    <Grid Height="500" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Margin="307,10,10,56">
            <Canvas x:Name="MyCanvas" Margin="0,0,0,73" Background="Black"/>
            <Grid HorizontalAlignment="Center" Height="47" Margin="0,387,0,0" VerticalAlignment="Top" Width="483">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="299*"/>
                    <ColumnDefinition Width="137*"/>
                    <ColumnDefinition Width="47*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BTN_Start" Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Width="138" Background="#FFA5F7D7" Click="BTN_Start_Click" Height="20" Margin="172,0,0,0" Grid.ColumnSpan="2"/>
                <Button x:Name="BTN_Pozastavit" Content="Pozastavit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="139" Background="#FFE4EFA0" Height="20" Margin="10,0,0,0"/>
                <Button x:Name="BTN_Prerusit" Content="Přerušit" HorizontalAlignment="Left" Margin="36,0,0,0" VerticalAlignment="Top" Width="138" Background="#FFFB8A70" Height="20" Grid.ColumnSpan="2" Grid.Column="1"/>
                <Button x:Name="BTN_Pokracovat" Content="Pokračovat" HorizontalAlignment="Left" Margin="10,27,0,0" Width="463" Background="#FFEFC68A" Height="20" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
            </Grid>
        </Grid>
        <ComboBox x:Name="CB_Barva" HorizontalAlignment="Left" Margin="23,91,0,0" VerticalAlignment="Top" Width="235" Grid.ColumnSpan="2" Height="22"/>
        <TextBox x:Name="TB_Nazev" HorizontalAlignment="Left" Margin="23,44,0,0" TextWrapping="Wrap" Text="Název projektu" VerticalAlignment="Top" Width="235" TextChanged="TB_Nazev_TextChanged" Grid.ColumnSpan="2" Height="18"/>
        <Grid x:Name="SliderGrid" HorizontalAlignment="Left" Height="122" VerticalAlignment="Top" Margin="26,146,0,0" Grid.ColumnSpan="2" Width="235">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="36*"/>
            </Grid.ColumnDefinitions>

            <Slider x:Name="SL_Iterace" HorizontalAlignment="Left" VerticalAlignment="Top" Width="235"
                Value="50" Minimum="0" Maximum="200" SmallChange="1" LargeChange="10" Grid.ColumnSpan="2"
        />




            <Slider x:Name="SL_Uhel" HorizontalAlignment="Left" VerticalAlignment="Center" Width="235" Grid.ColumnSpan="2"/>
            <Slider x:Name="SL_Koeficient" HorizontalAlignment="Left" Margin="0,104,0,0" VerticalAlignment="Top" Width="235" Grid.ColumnSpan="2"/>
        </Grid>




        <Label x:Name="L_Iterace" Content="Počet iterací" HorizontalAlignment="Left" Margin="23,118,0,0" VerticalAlignment="Top" Height="23" Grid.Column="1" Width="74"/>
        <Label x:Name="L_Uhel" Content="Úhel" HorizontalAlignment="Left" Margin="26,168,0,0" VerticalAlignment="Top" Height="23" Grid.ColumnSpan="2" Width="34"/>
        <Label x:Name="L_Nazev" Content="Název projektu" HorizontalAlignment="Left" Margin="12,15,0,0" VerticalAlignment="Top" Height="27" RenderTransformOrigin="0.5,0.5" Width="96" Grid.Column="1">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.193"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.229"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="L_Barva" Content="Barva" HorizontalAlignment="Left" Margin="12,63,0,0" VerticalAlignment="Top" Height="27" RenderTransformOrigin="0.5,0.5" Width="96" Grid.Column="1">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.193"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.229"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="L_Uhel_Kopírovat" Content="Koeficient" HorizontalAlignment="Left" Margin="26,222,0,0" VerticalAlignment="Top" Height="24" Grid.ColumnSpan="2" Width="62"/>
        <Button x:Name="BTN_Exportovat" Content="Exportovat" HorizontalAlignment="Left" Margin="26,308,0,0" VerticalAlignment="Top" Width="108" Grid.ColumnSpan="2" Height="20"/>
        <Button x:Name="BTN_Nahrat" Content="Nahrát" HorizontalAlignment="Left" Margin="153,308,0,0" VerticalAlignment="Top" Width="108" Grid.Column="1" Height="20"/>
        <TextBlock x:Name="TB_Hodnoty" HorizontalAlignment="Left" Margin="23,349,0,0" TextWrapping="Wrap" Text="Hodnoty sliderů:" VerticalAlignment="Top" Height="75" Width="235" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
